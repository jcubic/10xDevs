{
  "name": "10x-devs",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:coverage": "next dev --webpack",
    "build": "next build --turbopack && ([ \"$NODE_ENV\" = \"production\" ] && prisma migrate deploy || true)",
    "start": "next start",
    "lint": "eslint",
    "prisma:generate": "npx prisma generate --schema ./prisma-main/schema.prisma && npx prisma generate --schema ./prisma-e2e/schema.prisma",
    "prisma:studio": "npx prisma studio --schema ./prisma-main/schema.prisma",
    "prettier": "prettier --write .",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test --config e2e/playwright.config.ts",
    "test:e2e:coverage": "COVERAGE=true playwright test --config e2e/playwright.config.ts",
    "test:e2e:ui": "playwright test --config e2e/playwright.config.ts --ui",
    "test:e2e:docker:setup": "docker pull mcr.microsoft.com/playwright:v1.56.1-jammy && docker tag mcr.microsoft.com/playwright:v1.56.1-jammy playwright:e2e-local",
    "test:e2e:docker:build": "docker-compose -f e2e/docker-compose.yml build",
    "test:e2e:docker": "node e2e/setup-e2e-db.js && concurrently -k -s first \"NODE_ENV=test npm run dev -- --port 45678\" \"docker-compose -f e2e/docker-compose.yml up --abort-on-container-exit\"",
    "test:e2e:report": "playwright show-report e2e/report",
    "coverage:merge": "mkdir -p coverage/merged && nyc merge coverage/unit coverage/e2e --report-dir coverage/merged && nyc report --reporter=lcov --reporter=text --report-dir=coverage/merged",
    "parser": "peggy --format es src/lib/parser/grammar.peggy -o src/lib/parser/parser.js",
    "postinstall": "[ -d prisma-main ] && (npx prisma generate --schema ./prisma-main/schema.prisma && npx prisma generate --schema ./prisma-e2e/schema.prisma || true)"
  },
  "dependencies": {
    "@chakra-ui/react": "^3.28.0",
    "@codemirror/lang-markdown": "^6.4.0",
    "@codemirror/language-data": "^6.5.1",
    "@emotion/react": "^11.14.0",
    "@prisma/client": "^6.18.0",
    "@uiw/codemirror-theme-basic": "^4.25.2",
    "@uiw/react-codemirror": "^4.25.2",
    "better-auth": "^1.3.28",
    "clsx": "^2.1.1",
    "next": "16.0.0",
    "next-themes": "^0.4.6",
    "nodemailer": "^7.0.9",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "react-icons": "^5.5.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@jsdevtools/coverage-istanbul-loader": "^3.0.5",
    "@playwright/test": "^1.56.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^24",
    "@types/nodemailer": "^7.0.2",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^5.0.4",
    "@vitest/coverage-v8": "^4.0.1",
    "babel-plugin-istanbul": "^7.0.0",
    "better-sqlite3": "^12.4.1",
    "c8": "^10.1.3",
    "concurrently": "^9.2.1",
    "eslint": "^9",
    "eslint-config-next": "^16.0.0",
    "istanbul-lib-coverage": "^3.2.2",
    "jsdom": "^27.0.1",
    "lcov-summary": "^1.0.1",
    "nyc": "^17.1.0",
    "peggy": "^5.0.6",
    "prettier": "^3.6.2",
    "prisma": "^6.18.0",
    "sqlite3": "^5.1.7",
    "typescript": "^5",
    "vitest": "^4.0.1"
  },
  "copyright": "Copyright (C) 2025 Jakub T. Jankiewicz <jcubic@onet.pl>",
  "license": "AGPL-3.0-or-later",
  "repository": {
    "type": "git",
    "url": "https://github.com/jcubic/10xDevs.git"
  }
}
